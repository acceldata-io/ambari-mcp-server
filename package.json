{
  "name": "ambari-mcp-server",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for Apache Ambari, providing tools for cluster management, service operations, configuration management, status monitoring, metrics, and alert tracking.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ambari-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ambari",
    "mcp",
    "model-context-protocol",
    "hadoop",
    "cluster-management",
    "big-data",
    "hdfs",
    "yarn",
    "hbase"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "axios": "^1.13.2",
    "dotenv": "^16.6.1",
    "ssh2": "^1.17.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ssh2": "^1.15.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/odp-acceldata-io/ambari-mcp-server"
  }
}
